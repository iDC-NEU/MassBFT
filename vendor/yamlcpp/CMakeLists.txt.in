cmake_minimum_required(VERSION 3.12)

project(yamlcpp-download NONE)

include(ExternalProject)

SET(CMAKE_CXX_FLAGS_YCPP "")

IF(${CMAKE_CXX_COMPILER} STREQUAL "/usr/bin/clang++")
    SET(CMAKE_CXX_FLAGS_YCPP "-stdlib=libc++")
ENDIF()

# If any of the above ..._DIR options are not specified, their defaults are computed as follows.
# If the PREFIX option is given or the EP_PREFIX directory property is set,
# then an external project is built and installed under the specified prefix:
#
# TMP_DIR      = <prefix>/tmp
# STAMP_DIR    = <prefix>/src/<name>-stamp
# DOWNLOAD_DIR = <prefix>/src
# SOURCE_DIR   = <prefix>/src/<name>
# BINARY_DIR   = <prefix>/src/<name>-build
# INSTALL_DIR  = <prefix>
# LOG_DIR      = <STAMP_DIR>

ExternalProject_Add(yamlcpp
        URL             https://github.com/jbeder/yaml-cpp/archive/yaml-cpp-0.7.0.tar.gz
        PREFIX          ${CMAKE_CURRENT_BINARY_DIR}
        CONFIGURE_COMMAND ""
        BUILD_COMMAND     ""
        INSTALL_COMMAND   ""
        TEST_COMMAND      ""
        )
